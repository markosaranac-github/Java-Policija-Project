<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StanicaServlet</servlet-name>
        <servlet-class>servlets.StanicaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InspektorServlet</servlet-name>
        <servlet-class>servlets.InspektorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NacelnikServlet</servlet-name>
        <servlet-class>servlets.NacelnikServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeloServlet</servlet-name>
        <servlet-class>servlets.DeloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StanicaServlet</servlet-name>
        <url-pattern>/StanicaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InspektorServlet</servlet-name>
        <url-pattern>/InspektorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NacelnikServlet</servlet-name>
        <url-pattern>/NacelnikServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeloServlet</servlet-name>
        <url-pattern>/DeloServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            300
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
